{
	"alignment.surroundSpace": {
		"colon"      : [1, 1],
		"assignment" : [1, 1],
		"arrow"      : [1, 1],
		"comment"    : 2
	},

	"breadcrumbs.enabled" : true,

	"editor.cursorBlinking"             : "phase",
	"editor.cursorSmoothCaretAnimation" : true,
	"editor.fontSize"                   : 12,
	"editor.minimap.enabled"            : false,

	"editor.minimap.renderCharacters" : false,
	"editor.minimap.maxColumn"        : 200,
	"editor.minimap.showSlider"       : "always",
	"editor.smoothScrolling"          : true,
	// "minimap.errorHighlight":true,
	// "minimap.warningHighlight":true,

	"files.insertFinalNewline"     : true,
	"files.trimTrailingWhitespace" : true,

	"telemetry.enableCrashReporter" : false,
	"telemetry.enableTelemetry"     : false,

	"window.newWindowDimensions"           : "inherit",
	"window.nativeTabs"                    : false,
	"window.title"                         : "${dirty} ${activeEditorMedium}${separator}${rootName}",
	"window.zoomLevel": 0,
	"workbench.sideBar.location"           : "right",
	"workbench.statusBar.feedback.visible" : false,

	"[jsonc]": {
		"editor.defaultFormatter" : "esbenp.prettier-vscode"
	},
	"[javascript]": {
		"editor.defaultFormatter" : "numso.prettier-standard-vscode"
	},
	"javascript.updateImportsOnFileMove.enabled" : "always",
	"terraform.indexing"                         : {
		"enabled"      : false,
		"liveIndexing" : false,
		"delay"        : 500,
		"exclude"      : [".terraform/**/*", "**/.terraform/**/*"]
	},
	"terraform.languageServer": {
		"external": true,
		"args": [
			"serve"
		]
	},
	"git.autofetch"          : true,
	"explorer.confirmDelete" : false,
	"[json]"                 : {
		"editor.defaultFormatter" : "esbenp.prettier-vscode"
	},
	"[yaml]": {
		"editor.defaultFormatter" : "esbenp.prettier-vscode"
	},
	"macros": {
		"format" : ["editor.action.formatDocument", "editor.action.selectAll", "wwm.aligncode"]
	},
	"aws.samcli.location": "/usr/local/bin/sam",
	"go.useLanguageServer": true,
	"todo-tree.tree.showScanModeButton": false,
	"explorer.confirmDragAndDrop": false,
	"dart.flutterSdkPath": "/Users/user/flutter",
	"dart.openDevTools": "flutter",
	"gitlab.instanceUrl": "https://git.dailyact.com",
	"diffEditor.ignoreTrimWhitespace": false,
	"javascript.validate.enable": false,
	"standard.autoFixOnSave": true,
	"editor.tabSize": 2,
	"editor.formatOnSave": true,
	"mocha.files.glob": "src/**/*.spec.js",
	"mocha.env": {
		"Z":"Asia/Jakarta",
		"API_VERSION":"news-f0.0.1",
		"NAMESPACE":"news",
		"APPID":27,
		"PORT":3027,
		"NODE_ENV": "local",
		"NEWSAPI_KEY": "232c2e65130847b39576e6d0d9d75564",
		"MONGODB_URI": "mongodb://localhost:27017/test",
		"MONGODB_DB": "ms_news",
		"SECRET":"p@ssw0rd",
		"DEBUG": "callback:*,controllers:*,make:*,use-case:*,data-access:*,libraries:*"
	},
	"bookmarks.label.suggestion": "useWhenSelected",
	"bookmarks.navigateThroughAllFiles": true,
	"bookmarks.saveBookmarksInProject": true,
	"editor.suggestSelection": "first",
	"vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
	"[dockerfile]": {
		"editor.defaultFormatter": "ms-azuretools.vscode-docker"
	},
	"[typescript]": {
		"editor.defaultFormatter": "numso.prettier-standard-vscode"
	},
	"typescript.tsserver.log": "verbose",
	"typescript.updateImportsOnFileMove.enabled": "always",
	"git.confirmSync": false,
	"guides.enabled": false,
	"workbench.iconTheme": "vscode-icons"
}